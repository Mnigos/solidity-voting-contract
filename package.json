{
  "name": "solidity-voting-contract",
  "version": "1.0.0",
  "repository": "https://github.com/Mnigos/solidity-voting-contract.git",
  "author": "Igor <makowskiigor@gmail.com>",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "lint": "yarn lint:sol && yarn lint:js",
    "lint:fix": "yarn lint:sol --fix && yarn lint:js --fix",
    "lint:sol": "solhint \"contracts/**/*.sol\"",
    "lint:js": "eslint --ext \".js,.ts,.md,.jsx,.tsx,.mdx\" --ignore-path .gitignore .",
    "format": "prettier --write \"contracts/**/*.sol\"",
    "compile": "hardhat compile",
    "deploy:goerli": "hardhat run scripts/deploy.ts",
    "generate-types": "typechain --target=truffle-v5 'build/contracts/*.json'",
    "typecheck": "truffle compile && yarn generate-types && tsc --noEmit",
    "postinstall": "yarn generate-types",
    "test": "hardhat test",
    "test:watch": "hardhat watch test",
    "test:coverage": "hardhat coverage"
  },
  "lint-staged": {
    "*.sol": "solhint \"contracts/**/*.sol\" --fix && prettier --write \"contracts/**/*.sol\"",
    "*.{js,ts,md,jsx,tsx,mdx}": "eslint --cache --fix"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@commitlint/types": "^17.0.0",
    "@nomiclabs/hardhat-ethers": "^2.1.1",
    "@types/bn.js": "^5.1.1",
    "@types/chai": "^4.3.3",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.7.15",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "chai": "^4.3.6",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^3.5.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-import-helpers": "^1.2.1",
    "eslint-plugin-mocha": "^10.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-sonarjs": "^0.15.0",
    "eslint-plugin-unicorn": "^43.0.2",
    "ethers": "^5.7.0",
    "hardhat-watcher": "^2.5.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "^1.0.0-beta.24",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.8.0",
    "ts-node": "^10.9.1"
  },
  "dependencies": {
    "dotenv": "^16.0.2",
    "hardhat": "^2.11.0",
    "typechain": "^8.1.0",
    "typescript": "^4.8.2"
  }
}
