{
  "name": "solidity-voting-contract",
  "version": "1.0.0",
  "repository": "https://github.com/Mnigos/solidity-voting-contract.git",
  "author": "Igor <makowskiigor@gmail.com>",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "lint": "solhint \"contracts/**/*.sol\"",
    "lint:fix": "solhint \"contracts/**/*.sol\" --fix",
    "format": "prettier --write \"contracts/**/*.sol\"",
    "compile": "truffle compile",
    "deploy:ropsten": "truffle deploy --network ropsten"
  },
  "lint-staged": {
    "*.sol": "solhint \"contracts/**/*.sol\" --fix && prettier --write \"contracts/**/*.sol\""
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@commitlint/types": "^17.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "^1.0.0-beta.24",
    "solhint": "^3.3.7"
  },
  "dependencies": {
    "@truffle/hdwallet-provider": "^2.0.14",
    "dotenv": "^16.0.2",
    "truffle": "^5.5.28"
  }
}
