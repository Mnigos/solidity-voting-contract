{
  "name": "solidity-voting-contract",
  "version": "1.0.0",
  "repository": "https://github.com/Mnigos/solidity-voting-contract.git",
  "author": "Igor <makowskiigor@gmail.com>",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "lint": "solhint \"contracts/**/*.sol\"",
    "lint:fix": "solhint \"contracts/**/*.sol\" --fix",
    "format": "prettier --write \"contracts/**/*.sol\"",
    "compile": "truffle compile",
    "deploy:ropsten": "tsc -p ./tsconfig.migrate.json --outDir ./migrations && truffle migrate --network ropsten",
    "deploy:development": "tsc -p ./tsconfig.migrate.json --outDir ./migrations && truffle migrate --network development",
    "generate-types": "typechain --target=truffle-v5 'build/contracts/*.json'",
    "typecheck": "truffle compile && yarn generate-types && tsc --noEmit",
    "postinstall": "yarn generate-types",
    "test": "truffle run test",
    "test:watch": "truffle run test --watch",
    "test:coverage": "truffle run coverage"
  },
  "lint-staged": {
    "*.sol": "solhint \"contracts/**/*.sol\" --fix && prettier --write \"contracts/**/*.sol\""
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@commitlint/types": "^17.0.0",
    "@types/bn.js": "^5.1.1",
    "@types/chai": "^4.3.3",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.7.15",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "^1.0.0-beta.24",
    "solhint": "^3.3.7",
    "solidity-coverage": "0.8.0-beta.1",
    "ts-node": "^10.9.1"
  },
  "dependencies": {
    "@truffle/hdwallet-provider": "^2.0.14",
    "@typechain/truffle-v5": "^8.0.1",
    "dotenv": "^16.0.2",
    "truffle": "^5.5.28",
    "typechain": "^8.1.0",
    "typescript": "^4.8.2"
  }
}
